# ===== HOMEAL ENVIRONMENT VARIABLES =====
# Copy this file to .env and fill in your values

# ---------- DATABASE (Azure MySQL Flexible Server) ----------
DATABASE_URL="mysql://<ADMIN_USER>:<PASSWORD>@<SERVER_NAME>.mysql.database.azure.com:3306/homeal_db?ssl=true&sslcert=/etc/ssl/certs/DigiCertGlobalRootCA.crt.pem"

# ---------- REDIS (Azure Cache for Redis) ----------
REDIS_URL="rediss://<REDIS_NAME>.redis.cache.windows.net:6380"
REDIS_PASSWORD="<YOUR_REDIS_ACCESS_KEY>"

# ---------- AZURE BLOB STORAGE ----------
AZURE_STORAGE_CONNECTION_STRING="<YOUR_STORAGE_CONNECTION_STRING>"
AZURE_STORAGE_CONTAINER="homeal-images"
AZURE_CDN_ENDPOINT="https://<CDN_ENDPOINT>.azureedge.net"

# ---------- FIREBASE ----------
FIREBASE_PROJECT_ID="<YOUR_FIREBASE_PROJECT_ID>"
FIREBASE_CLIENT_EMAIL="<YOUR_SERVICE_ACCOUNT_EMAIL>"
FIREBASE_PRIVATE_KEY="<YOUR_PRIVATE_KEY>"

# ---------- AUTHENTICATION ----------
JWT_SECRET="<GENERATE_STRONG_SECRET_64_CHARS>"
JWT_REFRESH_SECRET="<GENERATE_ANOTHER_SECRET_64_CHARS>"
JWT_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ---------- PAYMENTS ----------
STRIPE_SECRET_KEY="sk_test_<YOUR_KEY>"
STRIPE_PUBLISHABLE_KEY="pk_test_<YOUR_KEY>"
STRIPE_WEBHOOK_SECRET="whsec_<YOUR_SECRET>"

# ---------- GOOGLE MAPS ----------
GOOGLE_MAPS_API_KEY="<YOUR_API_KEY>"

# ---------- APP CONFIG ----------
NODE_ENV="development"
PORT=8080
API_URL="http://localhost:8080"
ADMIN_URL="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ---------- AZURE APPLICATION INSIGHTS ----------
APPLICATIONINSIGHTS_CONNECTION_STRING=""

# ---------- NOTIFICATIONS ----------
FCM_SERVER_KEY="<YOUR_FCM_SERVER_KEY>"
NOTIFICATION_SOUND_ENABLED=true
